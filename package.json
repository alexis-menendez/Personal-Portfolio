{
    "name": "innerorbit",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "type": "module",
    "scripts": {
        "install:all": "npm run install:root && npm run install:server && npm run install:client",
        "install:root": "npm install",
        "install:server": "cd server && npm install",
        "install:client": "cd client && npm install",
        "build:all": "npm run build:server && npm run build:client",
        "build:server": "cd server && npm run build",
        "build:client": "cd client && npm run build",
        "seed": "cd server && npm run seed",
        "start:all": "concurrently \"npm run start:server\" \"wait-on tcp:3001 && npm run start:client\"",
        "start:server": "cd server && npm start",
        "start:client": "cd client && npm start",
        "clean:root": "npx rimraf node_modules",
        "clean:server": "cd server && npx rimraf node_modules dist tsconfig.tsbuildinfo",
        "clean:client": "cd client && npx rimraf node_modules dist",
        "clean:all": "npm run clean:root && npm run clean:server && npm run clean:client",
        "dev:start:all": "concurrently \"npm run dev:start:server\" \"wait-on tcp:3001 && npm run dev:start:client\"",
        "dev:start:server": "cd server && npm run dev",
        "dev:start:client": "cd client && npm run dev",
        "dev:install:build:start": "npm run install:all && npm run build:all && npm run dev:start:all",
        "dev:clean:install:build:start": "npm run clean:all && npm run dev:install:build:start",
        "paid:render-build": "npm run install:all",
        "paid:render-pre-start": "npm run build:all",
        "paid:render-start": "npm run start:all",
        "free:render-build": "npm run install:all && npm run build:all",
        "free:render-start": "npm run start:all"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.6",
        "@types/bcrypt": "^5.0.2",
        "@types/date-fns": "^2.5.3",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.15.14",
        "@types/react": "^19.1.3",
        "@types/react-dom": "^19.1.3",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "dotenv": "^16.5.0",
        "nodemon": "^3.1.10",
        "postcss": "^8.5.3",
        "rimraf": "^6.0.1",
        "tailwindcss": "^4.1.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "vite-plugin-static-copy": "^3.0.0",
        "wait-on": "^8.0.3"
    },
    "dependencies": {
        "@apollo/client": "^3.13.8",
        "@apollo/server": "^4.12.0",
        "apollo-server": "^3.13.0",
        "body-parser": "^2.2.0",
        "cloudinary": "^1.41.3",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "graphql": "^16.11.0",
        "graphql-tag": "^2.12.6",
        "mongoose": "^8.14.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-router": "^7.6.0",
        "react-router-dom": "^7.6.0",
        "serve": "^14.2.4"
    }
}
